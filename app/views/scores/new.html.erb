<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h1 class="text-center">Hello Would!!!<h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <h3 class="text-center">・Player・</h3>
                <%= form_for @player, url: scores_create_path do |f| %>
                    <div class="form-group">
                        <%= f.label :baseline_player, class: 'text-white' %>
                        <%= f.text_field :baseline_player, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                        <%= f.label :net_player, class: 'text-white' %>
                        <%= f.password_field :net_player, class: 'form-control' %>
                    </div>
        </div>
        <div class="col-md-2">
            <h4 class="text-center">VS</h4>
            <%= f.submit "submit", class: 'btn-block btn-white' %>
        </div>
        <div class="col-md-5">
            <h3 class="text-center">・Opponent・</h3>
                    <div class="form-group">
                        <%= f.label :baseline_player, class: 'text-white' %>
                        <%= f.text_field :baseline_player, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                        <%= f.label :net_player, class: 'text-white' %>
                        <%= f.password_field :net_player, class: 'form-control' %>
                    </div>
                <% end %>
        </div>
    </div>
</div>